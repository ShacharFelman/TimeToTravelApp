<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Home_Page">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_background"
        android:alpha="0.6"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/home_LBL_timeToTravel"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:autoSizeTextType="uniform"
            android:text="Time To Travel"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold|italic"
            tools:ignore="HardcodedText"
            tools:targetApi="o"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/home_BTN_addPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:text="Add point"
            android:textAllCaps="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/home_BTN_showMyPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:text="Show My Points"
            android:textAllCaps="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/home_BTN_showRecommendedPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:text="Show Recommended Points"
            android:textAllCaps="false" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</RelativeLayout>